<resources>

    <style name="DayOfWeek" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="StepperText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/stepper_indicator_inactive</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="StepperLine">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="SelectableField" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/item_appointment_bg</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableEnd">@drawable/ic_chevron_right</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textSize_15" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">17sp</item>
    </style>
</resources>